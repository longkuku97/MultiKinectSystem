<Window x:Class="MultiKinectSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MultiKinectSystem"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1400">
    <Grid>
        <StackPanel Orientation="Horizontal" TextBlock.FontSize="24">
            <TextBlock Text="FPS0: " Margin="0,0,5,0"/>
            <TextBlock x:Name="FramesPerSecondElement"/>
            <TextBlock Text="FPS1: " Margin="0,0,5,0"/>
            <TextBlock x:Name="FramesPerSecondElement1"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Image x:Name="DepthImage0" Width="640" Height="480"/>
            <Image x:Name="DepthImage1" Width="640" Height="480"/>
        </StackPanel>
    </Grid>
</Window>
